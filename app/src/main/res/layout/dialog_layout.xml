<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#67f06c"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingLeft="24dp">

        <TextView
            android:id="@+id/textViewFuerza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fuerza:"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textViewPuntoFuerza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp">

        <TextView
            android:id="@+id/textViewAgilidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Agilidad:"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textViewPuntoAgilidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp">

        <TextView
            android:id="@+id/textViewVitalidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vitalidad: "
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textViewPuntoVitalidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp">

        <TextView
            android:id="@+id/textViewEnergia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Energia:"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textViewPuntoEnergia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp">

        <TextView
            android:id="@+id/textViewComando"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Comando:"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textViewPuntoComando"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>